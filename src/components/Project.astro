---
interface Props {
  title: string;
  description: string;
  url: string;
  img: string;
  alt: string;
}

const { alt, description, img, title, url } = Astro.props;
---

<li class="list-none flex flex-col gap-2">
  <h4 class="text-lg font-semibold text-gray-100 mt-2">{title}</h4>
  <p class="mb-4 text-base font-normal text-gray-300 text-pretty">{description}</p>
  <a href={url} class="mt-2"> <img src={img} alt={alt} class="rounded-lg" /></a>
</li>

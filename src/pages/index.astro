---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Experience from "../components/Experience.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import Social from "../components/Social.astro";
import Studies from "../components/Studies.astro";
import CVButton from "../components/CVButton.astro";
import Book from "../components/icons/Book.astro";
import GithubCat from "../components/icons/GithubCat.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Edgar Lopez Calomarde">
  <main class="relative">
    <!-- About -->
    <Section className="py-44 pb-44">
      <h1
        class="text-4xl font-bold mt-2 tracking-tight text-slate-100 sm:text-5xl"
      >
        Edgar Lopez
      </h1>

      <h2
        class="mt-3 text-lg tracking-tight font-medium text-slate-200 sm:text-xl"
      >
        Developer
      </h2>
      <p class="mt-3 sm:w-10/12 text-slate-300 text-pretty">
        I am focused on building efficient and attractive web applications that
        offer an excellent user experience.
      </p>

      <p class="mt-3 sm:w-10/12 text-slate-300 text-pretty">
        One thing that is clear to me is that the day begins with a cup of
        coffee to face problems and acquire new knowledge.
      </p>

      <div class="flex">
        <Social />
        <CVButton />
      </div>
    </Section>

    <!-- Experience -->
    <span id="experience" class="p-16"></span>
    <Section>
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white/80"
      >
        <span><BriefCase class="size-8" /></span> Experience
      </h2>
      <Experience />
    </Section>

    <!-- Studies -->
    <span id="studies" class="p-16"></span>
    <Section>
      <h2
        class="text-3xl font-semibold mb-8 flex gap-x-3 items-center text-white/80"
      >
        <span><Book class="size-8" /></span> Studies
      </h2>
      <Studies />
    </Section>

    <!-- Projects -->
    <span id="projects" class="p-16"></span>
    <Section>
      <h2
        class="text-3xl font-semibold mb-8 flex gap-x-3 items-center text-white/80"
      >
        <span><GithubCat class="size-8" /></span> Projects
      </h2>
      <Projects />
    </Section>
  </main>
</Layout>

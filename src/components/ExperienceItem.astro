---
interface Props {
  title: string;
  description: Array<string>;
  stack: Array<string>;
  date: string;
  company?: string;
}

const { title, description, stack, date, company } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-sky-400 bg-sky-400"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-300">{date}</time>
<h3 class="text-lg font-semibold text-gray-100 mt-2">
  {title}
</h3>

{ company && (
  <p class="text-sm font-semibold text-gray-300 my-2">{company}</p>
)

}

{
  description.map((p) => {
    return (
      <p class="mb-4 text-base font-normal text-gray-300 text-pretty">{p}</p>
    );
  })
}

<ul class="grid grid-cols-2 sm:grid-cols-3 lg:flex gap-2 max-w-full">
  {
    stack.map((t) => {
      return (
        <li class="bg-black/40 px-4 py-1 rounded-3xl text-2xs sm:text-sm font-medium cursor-pointer border text-white text-center border-slate-950 hover:border-white transition-all ">
          {t}
        </li>
      );
    })
  }
</ul>
